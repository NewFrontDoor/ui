{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "__fixtures__/**/*.ts",
    "__fixtures__/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../types"
  ]
}
