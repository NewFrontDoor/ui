{
  "private": true,
  "scripts": {
    "babel": "yarn workspaces run babel",
    "build": "next build",
    "cosmos": "cosmos --config cosmos/cosmos.config.json",
    "cosmos:export": "cosmos-export --config cosmos/cosmos.config.json",
    "dev": "next",
    "lint": "xo",
    "start": "next start",
    "test": "jest"
  },
  "dependencies": {
    "react-cosmos-fetch-proxy": "^4.8.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@emotion/core": "^10.0.10",
    "@emotion/is-prop-valid": "^0.8.3",
    "@emotion/styled": "^10.0.10",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^9.2.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "codecov": "^3.5.0",
    "css-loader": "^3.2.0",
    "emotion-theming": "^10.0.10",
    "eslint": "^6.0.1",
    "eslint-config-xo-react": "^0.20.0",
    "eslint-plugin-emotion": "^10.0.7",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-react-hooks": "^2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "mineral-ui": "^0.58.0",
    "prettier": "^1.12.1",
    "prettier-plugin-package": "^0.3.1",
    "prop-types": "^15.6.1",
    "react": "^16.8.6",
    "react-cosmos": "^5.0.0-rc.0",
    "react-dom": "^16.8.6",
    "react-hot-loader": "^4.12.8",
    "style-loader": "^1.0.0",
    "webpack": "^4.7.0",
    "xo": "^0.25.3"
  },
  "eslint": {
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "xo": {
    "extends": [
      "xo-react",
      "plugin:jest/recommended"
    ],
    "parser": "babel-eslint",
    "prettier": true,
    "space": true,
    "plugins": [
      "emotion",
      "jest"
    ],
    "rules": {
      "emotion/jsx-import": "error",
      "emotion/no-vanilla": "error",
      "emotion/import-from-emotion": "error",
      "emotion/styled-import": "error"
    },
    "overrides": [
      {
        "files": "**/__tests__/**/*.js",
        "rules": {
          "import/no-unassigned-import": [
            "error",
            {
              "allow": [
                "@testing-library/jest-dom/extend-expect"
              ]
            }
          ]
        }
      }
    ]
  }
}
