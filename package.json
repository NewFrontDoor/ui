{
  "private": true,
  "scripts": {
    "babel": "yarn workspaces run babel",
    "build": "next build",
    "cosmos": "cosmos --config cosmos/cosmos.config.json",
    "cosmos:export": "cosmos-export --config cosmos/cosmos.config.json",
    "dev": "next",
    "lint": "xo",
    "start": "next start",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "@emotion/core": "^10.0.10",
    "@emotion/is-prop-valid": "^0.8.3",
    "@emotion/styled": "^10.0.10",
    "@mdx-js/react": "^1.5.1",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.1",
    "babel-loader": "^8.0.6",
    "codecov": "^3.5.0",
    "css-loader": "^3.4.2",
    "emotion-theming": "^10.0.10",
    "eslint": "^6.0.1",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.5.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^25.1.0",
    "mineral-ui": "^0.58.0",
    "prettier": "^1.19.1",
    "prettier-plugin-package": "^0.3.1",
    "prop-types": "^15.6.1",
    "react": "^16.8.6",
    "react-cosmos": "^5.0.0-rc.0",
    "react-cosmos-fetch-proxy": "^4.8.2",
    "react-dom": "^16.8.6",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "style-loader": "^1.1.3",
    "theme-ui": "^0.3.1",
    "webpack": "^4.7.0",
    "xo": "^0.27.2"
  },
  "eslint": {
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "xo": {
    "extends": [
      "xo-react",
      "plugin:jest/recommended"
    ],
    "prettier": true,
    "space": true,
    "plugins": [
      "jest"
    ],
    "env": [
      "browser"
    ],
    "rules": {
      "react/boolean-prop-naming": "off"
    },
    "overrides": [
      {
        "files": "**/__tests__/**/*.js",
        "rules": {
          "import/no-unassigned-import": [
            "error",
            {
              "allow": [
                "@testing-library/jest-dom/extend-expect"
              ]
            }
          ]
        }
      }
    ]
  }
}
